// --- Services ---
const StorageService = {
    get: (key, defaultValue) => {
        try {
            const item = localStorage.getItem(key);
            return item ? JSON.parse(item) : defaultValue;
        } catch (e) {
            console.error(`Error reading ${key}:`, e);
            return defaultValue;
        }
    },
    set: (key, value) => {
        try {
            localStorage.setItem(key, JSON.stringify(value));
        } catch (e) {
            console.error(`Error saving ${key}:`, e);
        }
    },
    remove: (key) => localStorage.removeItem(key)
};

const AuthService = {
    login: (username, password) => {
        if (username === 'admin' && password === 'admin123') {
            return { id: 1, name: 'Administrator', role: 'admin' };
        }
        if (username === 'pengurus' && password === 'user123') {
            return { id: 2, name: 'Staf Pengurus', role: 'staff' };
        }
        return null;
    },
    logout: () => StorageService.remove('kop_user_session'),
    getUser: () => StorageService.get('kop_user_session', null)
};

const MemberService = {
    getAll: () => StorageService.get('kop_members', []),
    save: (member) => {
        const members = MemberService.getAll();
        const index = members.findIndex(m => m.id === member.id);
        if (index >= 0) {
            members[index] = { ...member, lastModified: new Date().toISOString() };
        } else {
            members.push({ ...member, id: Date.now().toString(), joinedDate: new Date().toISOString() });
        }
        StorageService.set('kop_members', members);
    },
    delete: (id) => {
        const members = MemberService.getAll().filter(m => m.id !== id);
        StorageService.set('kop_members', members);
    }
};

const TransactionService = {
    getAll: () => StorageService.get('kop_transactions', []),
    add: (transaction) => {
        const transactions = TransactionService.getAll();
        transactions.unshift({ ...transaction, id: Date.now().toString(), date: new Date().toISOString() });
        StorageService.set('kop_transactions', transactions);
    },
    delete: (id) => {
        const transactions = TransactionService.getAll().filter(t => t.id !== id);
        StorageService.set('kop_transactions', transactions);
    },
    getStats: () => {
        const transactions = TransactionService.getAll();
        let saldo = 0, laba = 0, piutang = 0, hutang = 0;

        transactions.forEach(t => {
            const amount = parseFloat(t.amount) || 0;
            if (t.status === 'Lunas') {
                if (t.type === 'income') {
                    saldo += amount;
                    laba += amount;
                } else if (t.type === 'expense') {
                    saldo -= amount;
                    laba -= amount;
                }
            } else if (['Belum', 'Pending'].includes(t.status)) {
                if (t.type === 'income') piutang += amount;
                else if (t.type === 'expense') hutang += amount;
            }
        });

        return { saldo, laba, piutang, hutang };
    }
};

const FundsService = {
    getAll: () => StorageService.get('kop_funds', []),
    save: (fund) => {
        const funds = FundsService.getAll();
        const index = funds.findIndex(f => f.id === fund.id);
        if (index >= 0) {
            funds[index] = { ...fund };
        } else {
            funds.push({ ...fund, id: Date.now().toString() });
        }
        StorageService.set('kop_funds', funds);
    },
    togglePayment: (memberId, year, month) => {
        const fundId = `${memberId}_${year}_${month}`;
        const funds = FundsService.getAll();
        const fund = funds.find(f => f.id === fundId);

        if (fund && fund.paid) {
            // Reverse: Mark as unpaid and delete transaction
            fund.paid = false;
            fund.transactionId = null;

            // Delete related transaction
            if (fund.transactionId) {
                TransactionService.delete(fund.transactionId);
            }
        } else {
            // Mark as paid and create transaction
            const member = MemberService.getAll().find(m => m.id === memberId);
            if (!member) return;

            const amount = 50000; // Default fund amount
            const transactionId = Date.now().toString();

            TransactionService.add({
                id: transactionId,
                type: 'income',
                description: `Dana Karyawan - ${member.name} (${month} ${year})`,
                amount: amount,
                category: 'Dana Karyawan',
                status: 'Lunas'
            });

            if (fund) {
                fund.paid = true;
                fund.transactionId = transactionId;
            } else {
                funds.push({
                    id: fundId,
                    memberId,
                    year,
                    month,
                    amount,
                    paid: true,
                    transactionId
                });
            }
        }

        StorageService.set('kop_funds', funds);
    },
    getByMemberYear: (memberId, year) => {
        const funds = FundsService.getAll();
        return funds.filter(f => f.memberId === memberId && f.year === year);
    }
};

const formatRupiah = (number) => {
    return new Intl.NumberFormat('id-ID', {
        style: 'currency',
        currency: 'IDR',
        minimumFractionDigits: 0
    }).format(number);
};

